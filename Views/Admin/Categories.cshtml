@model List<CategoryModel>

@{
    ViewBag.Title = "Kategoriler";
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Kategori</th>
            <th scope="col">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <th scope="row">@category.Id</th>
                <td>@category.Category</td>
                <td>
                    <a href="@Url.Action("UpdateCategory", "Admin", new { id = category.Id })" class="btn btn-primary">Düzenle</a>
                    <a href="@Url.Action("DeleteCategory", "Admin", new { id = category.Id })" onclick="return confirm('Kategoriyi silmek istediğinize emin misiniz?')" class="btn btn-secondary">Sil</a>
                </td>
            </tr>
        }
    </tbody>
    <div style="text-align: center; margin-bottom: 17px;">
        <a href="/Admin/AddCategory" style="text-decoration: none" class="link">Kategori Ekle</a>
    </div>
</table>
